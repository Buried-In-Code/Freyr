{% from "components/forms.jinja" import input, input_date, input_number %}
{% from "components/chart.jinja" import chart %}
<!DOCTYPE html>
<html lang="en-GB">
<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1" name="viewport">
  <title>Freyr</title>
  <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet">
  <link href="/static/css/styles.css" rel="stylesheet">
  <link href="/static/css/custom-bulma-dark.css" id="dark-theme" rel="stylesheet">
  <link disabled href="/static/css/custom-bulma-light.css" id="light-theme" rel="stylesheet">
</head>
<body class="has-navbar-fixed-top">
  <main class="section">
    <div class="container">
      <header class="block has-text-centered">
        <h1 class="title is-1">Freyr</h1>
      </header>
      <div class="columns">
        <div class="column is-one-quarter-tablet is-one-fifth-fullhd">
          <div class="box">
            <h5 class="title is-5 has-text-info-light">Settings</h5>
            <form accept-charset="UTF-8" action="/" method="GET">
              {{ input_number(label="Count", name="count", value=28) }}
              <div class="buttons is-centered">
                <button class="button is-info">
                  <span class="icon">
                    <i class="fa-solid fa-filter"></i>
                  </span>
                  <span>Filter</span>
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="column">
          {{ chart(label="Device 1", id="device-1") }}
        </div>
      </div>
    </div>
  </main>
  {% include "components/footer.jinja" %}
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js" type="text/javascript"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.2.1/dist/chart.umd.min.js" type="text/javascript"></script>
  <script src="/static/js/scripts.js" type="text/javascript"></script>
  <script type="text/javascript">
    console.log("Hello");
    ready(function(){
      console.log("Hello Again");
    });
    ready(updateCharts());
    setInterval(updateCharts, 5000);
    setInterval(function(){
      console.log("1s delayed")
    },1000);
  </script>
  <script src="//cdn.jsdelivr.net/npm/eruda"></script>
  <script>eruda.init();</script>
</body>
</html>